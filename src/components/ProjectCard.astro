---
interface Props {
  image: string;
  title: string;
  body: string;
}

const { image, title, body } = Astro.props;
---

<div class="flex gap-4 flex-col md:flex-row">
  <img
    src={image}
    alt={title}
    class="w-[350px] h-[200px] md:order-1"
  />
  <div class="flex flex-col gap-2 order-1 md:order-2">
    <h2
      class="text-lg font-semibold group flex items-center"
    >
      {title}

    </h2>
    <p class="text-gray-700 leading-6 text-base">{body}</p>

    <div class="mt-auto text-base text-sky-700 group flex items-center flex-end">View Project
            <span 
      class="ml-1 text-xl font-semibold transform transition-transform duration-300 group-hover:translate-x-1 group-hover:-translate-y-1"
      style="background: none !important;"
    >
      &nearr;
    </span>
  </div>

  </div>
</div>
