---
import { Icon } from "astro-icon/components";
import JCProfile from "../assets/images/JCProfile.jpg";
---

<div>
  <div class="flex flex-col md:flex-row gap-2">
    <img
      src={JCProfile.src}
      alt="Keith Esclavon"
      class="w-[150px] md:w-auto md:h-[150px]"
    />
    <div class="flex flex-col gap-2">
      <h1 class="text-3xl lg:text-3xl font-semibold">Keith Esclavon</h1>
      <div class=" flex gap-2 text-xl text-red-700">
        <a href="" class="hover:text-red-500"><Icon name="github" /></a>
        <a href="" class="hover:text-red-500"><Icon name="linkedin" /></a>
        <a href="" class="hover:text-red-500"><Icon name="discord" /></a>
        <a href="" class="hover:text-red-500"><Icon name="email" /></a>
      </div>
      <h2 class="text-lg">
        Programmer based in <span
          class="font-bold"
          >Tennessee</span
        >
      </h2>
    </div>
  </div>
  <p class="
          text-base
          mt-4
          italic
          text-gray-700
          ">
    Currently helping small businesses solve their digital problems.
  </p>

</div>